@page
@model GroupStudyUI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/css/loginstyle.css">
</head>
<body>
    <div class="modal-wrap">
        <div class="modal-bodies">
            <div class="modal-body modal-body-step-1 is-showing">
                <div class="title">Log In</div>
                <div class="description">Welcome to GS Learning System</div>
                <form method="post">
                    <input type="text" placeholder="Name" asp-for="Name" />
                    <input type="email" placeholder="Email" asp-for="Email" />
                    <div class="text-center">
                        <button type="submit" class="button">LOG IN</button>
                        <a href="signup.html" class="button">Create an account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src='https://code.jquery.com/jquery-2.2.4.min.js'></script>
</body>
</html>