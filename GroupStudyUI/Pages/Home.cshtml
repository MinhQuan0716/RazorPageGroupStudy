@page
@model GroupStudyUI.Pages.HomeModel
@{
	ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="~/css/homestyle.css" rel="stylesheet">

</head>

<body >
	<!-- ======= Banner Section ======= -->
  <section id="hero" class="d-flex align-items-center">

	<div class="container">
	  <div class="row">
		<div class="col-lg-6 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
		  <h1>Better Learning For Your Study Path</h1>
		  <h2>Our platform provide groups for every questions & answers</h2>
		  <div class="d-flex justify-content-center justify-content-lg-start">
						<a href="/Explore" class="btn-get-started scrollto">Get Started</a>
		  </div>
		</div>
		<div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
		  <img src="~/imgs/home_banner.png" class="img-fluid animated" alt="">
		</div>
	  </div>
	</div>

  </section><!-- End Banner -->

	<!-- ======= Clients Section ======= -->
	<section id="clients" class="clients section-bg">
	  <div class="container">

		<div class="row" data-aos="zoom-in">

		  <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.coursera.org/" target="_blank">
				<img src="~/imgs/client/Coursera-logo.png" class="img-fluid" alt="">
			</a>
		  </div>

		  <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.udemy.com" target="_blank">
				<img src="~/imgs/client/Udemy_logo.png" class="img-fluid" alt="Udemy Logo">
			</a>
		</div>

		<div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.elsaspeak.com" target="_blank">
				<img src="~/imgs/client/Elsa_logo.png" class="img-fluid" alt="Elsa Logo">
			</a>
		</div>

		<div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.duolingo.com" target="_blank">
				<img src="~/imgs/client/Duolingo_logo.png" class="img-fluid" alt="Duolingo Logo">
			</a>
		</div>

		<div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.quizlet.com" target="_blank">
				<img src="~/imgs/client/Quizlet_logo.png" class="img-fluid" alt="Quizlet Logo">
			</a>
		</div>

		<div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
			<a href="https://www.stackoverflow.com" target="_blank">
				<img src="~/imgs/client/Stackoverflow_logo.png" class="img-fluid" alt="Stack Overflow Logo">
			</a>
		</div>

	  </div>

	</div>
</section>

</body>

</html>
