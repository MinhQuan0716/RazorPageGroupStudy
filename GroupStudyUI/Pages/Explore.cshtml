@page
@model GroupStudyUI.Pages.ExploreModel
@{
    ViewData["Title"] = "Explore More Group";
}

<!DOCTYPE html>
<html>

<head>
    <link href="./css/explore.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" >
</head>

<body>

    <div class="container">
        <div class="row mt-3">
            <div class="col-lg-10 mx-auto mb-4">
                <div class="section-title text-center ">
                    <h3 class="top-c-sep">Explore more groups</h3>
                    <p>
                        Connect with like-minded individuals, create study groups, and explore a vast range of educational resources.<br />
                        Boost your learning experience with collaborative discussions, shared notes, and expert-led conversations.
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="career-search mb-60">

                    <form  asp-page-handler="Search" class="career-form mb-60" method="post">
                        <div class="row">
                            <div class="col-md-9 col-lg-9 my-9 mt-4">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="searchName" placeholder="Enter Group Name" id="keywords">
                                </div>
                            </div>
                            
                            <div class="col-md-3 col-lg-3 my-3">
                                <input type="submit" class="btn btn-lg btn-block btn-light btn-custom" id="contact-submit"
                                    value="Search"/>
                                
                            </div>
                        </div>
                    </form>

                    <div class="filter-result">
                        <p class="mb-30 ff-montserrat">Finding result : @Model.listGroups.Count</p>

                        @foreach (var group in Model.listGroups)
                        {
                            <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                                <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                                    <div class="img-holder mr-md-4 mb-md-0 mb-4 mx-auto mx-md-0 d-md-none d-lg-flex">
                                        GD
                                    </div>
                                    <div class="job-content">
                                        <h5 class="text-center text-md-left">@group.Name</h5>
                                        <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                            <li class="mr-md-4">
                                                <i class="zmdi zmdi-globe mr-2"></i> @group.Status
                                            </li>
                                            <li class="mr-md-4">
                                                <i class="zmdi zmdi-accounts mr-2"></i> @group.memberAmount
                                            </li>
                                        </ul>
                                        <p>@group.Description</p>
                                    </div>
                                </div>
                                <div class="job-right my-4 flex-shrink-0">
                                    <form method="post">
                                        <button  asp-route-groupId="@group.Id" asp-page-handler="JoinGroup" class="btn d-block w-100 d-sm-inline-block btn-light">Join now</button>

                                    </form>
                                </div>
                            </div>
                        }
                    </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

</body>

</html>